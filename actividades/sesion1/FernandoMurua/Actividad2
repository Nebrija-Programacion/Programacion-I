
using namespace std;

class Persona{

public:

    Persona(string _nombre, unsigned short int _edad, unsigned short int _altura, unsigned short int _peso, Mascota _mascotaFavorita)
    {
        nombre = _nombre;
        edad = _edad;
        altura = _altura;
        peso = _peso;
        Mascota = _mascotaFavorita
    }


    string nombre;
    unsigned short edad;
    unsigned short altura;
    unsigned short peso;
    string Mascota;
};
class Mascota{

public:

    Mascota(string _nombre,string _especie, unsigned short int _edad)
    {
     nombre = _nombre;
     especie = _especie;
     edad = _edad;
    }
    string nombre;
    string especie;
    unsigned short edad;

};
int main(){

    Persona Chica("Nieves", 18, 172, 70);
    Mascota mascotaFavorita("Lucas", "perro", 4);

            cout << "Hola " << Chica.nombre << " tu mascota favorita es un " << mascotaFavorita.especie << " y se llama " << mascotaFavorita.nombre << endl;
            return 0;
}


